{
    "name" : "was_liberty_core_baseconfig",
    "description" : "installs WAS Liberty Core",
    "json_class" : "Chef::Role",
    "chef_type" : "role",
    "default_attributes" : {
      "ibm" : {
        "sw_repo" : "",
        "sw_repo_user" : "repouser",
        "sw_repo_password" : "",
        "im_repo" : "",
        "im_repo_user" : "repouser",
        "im_repo_password" : ""
      },
      "was_liberty" : {
        "edition": "core",
        "install_user": "root",
        "install_grp": "root",
        "install_dir" : "/opt/IBM/WebSphere/Liberty",
        "java_version" : "8.0",
        "base_version" : "16.0.4",
        "im_install_dir" : "/opt/IBM/InstallationManager",
        "liberty_servers": {
          "server01" : {
            "name" : "srv01",
            "jvm_params" : "-Xms256m -Xmx2048m",
            "timeout": "15",
            "httpport" : "9080",
            "httpsport" : "9443",
            "feature" : "webProfile-7.0 adminCenter-1.0",
            "keystore_id" : "defaultKeyStore",
            "keystore_password": "",
            "users" : {
              "user01": {
                "name": "admin1",
                "password": "",
                "role" : "admin"
              },
              "user02" : {
                "name": "nonadmin1",
                "password" : "",
                "role" : "nonadmin"
              }
            }
          }
        },
        "wlp_user_dir": "/var/liberty/usr"
      }
    },
    "run_list" : [
        "recipe[wasliberty::prereq]",
        "recipe[wasliberty::install]",
        "recipe[wasliberty::create_server]",
        "recipe[wasliberty::config_srv]",
        "recipe[wasliberty::gather_evidence]",
        "recipe[wasliberty::cleanup]"
    ]
}
